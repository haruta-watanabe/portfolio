---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";
import About from "../../components/About.astro";
import Skills from "../../components/Skills.astro";
import ProjectsSection from '../../components/ProjectsSection.astro';
import Certifications from '../../components/Certifications.astro';
import Contact from '../../components/Contact.astro';
import { ui } from "../../data/ui.ts";

const lang = "en";
const pageDescription = "Welcome to Haruta Watanabe's portfolio site. Here you can find information about my skills, projects, and myself.";
---

<BaseLayout description={pageDescription}>
  <Hero
    lang={lang}
    catchphrase={ui[lang]["hero.catchphrase"]}
    resumeText={ui[lang]["hero.button.resume"]}
  />
  <About lang={lang} />
  <Skills />
  <Certifications lang={lang} />
  <ProjectsSection lang={lang} />
  <Contact lang={lang} />
</BaseLayout>
