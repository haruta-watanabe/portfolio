---
import { ui } from "../data/ui.ts";

interface Props {
  lang: keyof typeof ui;
}
const { lang = "ja" } = Astro.props;
const t = ui[lang];

type Certification = {
  name: string;
  issuer: string;
  date: string;
  url?: string;
};

const certs: Certification[] = [
];
---

{
  certs.length > 0 && (
    <section id="certifications" class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">
          {t["certifications.title"]}
        </h2>
        <div class="max-w-3xl mx-auto">
          <ul class="space-y-6">
            {certs.map((cert) => (
              <li class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
                <p class="text-xl font-bold">{cert.name}</p>
                <p class="text-gray-600 dark:text-gray-400 mt-1">
                  {cert.issuer}
                </p>
                <p class="text-sm text-gray-500 mt-2">{cert.date}</p>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>
  )
}
