---
import { getCollection } from "astro:content";
import { ui } from "../data/ui.ts";
import ProjectCard from "./ProjectCard.astro";

interface Props {
  lang: 'ja' | 'en';
}
const { lang } = Astro.props;
const t = ui[lang];

const projects = (
  await getCollection("projects", ({ id }) => {
    return id.startsWith(`${lang}/`);
  })
)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<section id="projects" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Projects<a href={`/${lang}/projects/1`} class="text-base ml-3 text-blue-500 hover:underline">{t["project.see_all"]}</a></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => <ProjectCard project={project} />)}
    </div>
  </div>
</section>
