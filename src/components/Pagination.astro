---
import type { Page } from "astro";
import { ui } from "../data/ui.ts";

interface Props {
  page: Page;
  lang: keyof typeof ui;
}

const { page, lang="ja" } = Astro.props;
const t = ui[lang];
---

<nav class="flex justify-center items-center gap-x-4 mt-12">
  {
    page.url.prev && (
      <a
        href={page.url.prev}
        class="bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-bold py-2 px-4 rounded-lg transition-colors"
      >
        &laquo; {t["pagination.prev"]}
      </a>
    )
  }

  <span class="text-gray-600 dark:text-gray-400">
    {t["pagination.page"]} {page.currentPage} / {page.lastPage}
  </span>

  {
    page.url.next && (
      <a
        href={page.url.next}
        class="bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-bold py-2 px-4 rounded-lg transition-colors"
      >
        {t["pagination.next"]} &raquo;
      </a>
    )
  }
</nav>
